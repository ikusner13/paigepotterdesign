---
const services = [
  "Interior Design",
  "Set Design",
  "Production Assistant",
  "Decorator",
];
---

<div>
  <fieldset>
    <legend class="text-sm"> What are you interested in?</legend>
    <div class="flex flex-wrap mb-3">
      {
        services.map((service, index) => {
          return (
            <div class="flex items-center mr-3 py-2 last:mr-0">
              <input
                class="mr-2 accent-orange-400 rounded-full service-checkbox"
                type="checkbox"
                id={service}
                name="interests"
                value={service}
              />
              <label
                class="service-label border-b-2 border-solid border-zinc-800"
                for={service}
              >
                {service}
              </label>
            </div>
          );
        })
      }
    </div>
  </fieldset>
</div>

<style>
  .service-checkbox:checked + .service-label {
    border-bottom: 2px solid #fb923c;
  }
</style>
