---
import { Image } from "@astrojs/image/components";
import navIcon from "../assets/navIcon.png";

const leftSideItems = [
  { title: "PORTFOLIO", url: "/portfolio", color: "text-orange-400" },
  { title: "SERVICES", url: "/services", color: "text-red-400" },
];

const rightSideItems = [
  { title: "ABOUT ME", url: "/about-me", color: "text-blue-400" },
  { title: "CONTACT", url: "/contact", color: "text-green-400" },
];

const {
  url: { pathname },
} = Astro;
---

<header
  id="page-header"
  class="z-10 w-full py-12 text-white border-b border-transparent absolute top-0 bottom-auto w-100 justify-center"
>
  <nav class="w-100">
    <ul class="flex items-center justify-around">
      {
        leftSideItems.map(({ title, url, color }) => {
          const selected = url === pathname;

          return (
            <li class="inline-block">
              <a
                class={`text-sm ${
                  selected && `font-bold ${color}`
                } hover:font-bold duration-150 ease-in-out`}
                href={url}
                title={title}
              >
                {title}
              </a>
            </li>
          );
        })
      }
      <Image src={navIcon} alt="nav-icon" width={90} />
      {
        rightSideItems.map(({ title, url, color }) => {
          const selected = url === pathname;

          return (
            <li class="inline-block">
              <a
                class={`text-sm ${
                  selected && `font-bold ${color}`
                } hover:font-bold duration-150 ease-in-out`}
                href={url}
                title={title}
              >
                {title}
              </a>
            </li>
          );
        })
      }
    </ul>
