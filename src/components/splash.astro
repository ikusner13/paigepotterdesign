---
import Starfield from "~/components/hero.astro";
---

<section class="bg-black relative">
  <Starfield />
  <div class="absolute top-48 w-9/12 center-x">
    <div class="text-center">
      <h1 class="font-medium text-7xl header-spacing">PALETTE PEAK</h1>
      <h2 class="subheader-spacing text-4xl">DESIGN</h2>
      <!-- <h2 class="text-4xl text-center">DESIGN</h2> -->
      <h3 class="text-2xl mt-10">AHHHHHHH</h3>
    </div>
    <div class="mt-48 text-center">
      <button class="mt-12 bg-white rounded-3xl text-black py-2 px-24"
        >WORK
      </button>
    </div>
  </div>
</section>

<style>
  .header-spacing {
    letter-spacing: 0.25em;
    text-indent: 0.125em;
  }

  .subheader-spacing {
    letter-spacing: 2em;
    text-indent: 1em;
    font-weight: 100;
  }
  .center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .center-x {
    left: 50%;
    transform: translateX(-50%);
  }
</style>
